<div class="container">
	<div>
		{% for type,messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{type}} alert-dismissible fade show w-100 text-center mt-3 mb-5" role="alert">
					<strong>
						{{ message }}
						&nbsp;<i class="fas fa-grin-beam text-warning lead"></i>
					</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			{% endfor %}
		{% endfor %}
	</div>
</div>
